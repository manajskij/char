  <div class="container">
    <%= link_to "Проблемы, исследования, задачи, думы единого центра.", root_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to "Help",   '#' %></li>
        <% if signed_in? %>
            <li id="fat-menu" class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                  <b class="caret"></b> <%= "Приблемы/Брифинги"%> <b class="caret"></b>
